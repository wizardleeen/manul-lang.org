{
    "name": "kiwi",
    "scopeName": "source.kiwi",
    "patterns": [
      {
        "match": "\\b(class|fn|var|require)\\b",
        "name": "keyword.control.kiwi"
      },
      {
        "match": "\\b(string|double|int|bool)\\b",
        "name": "support.type.kiwi"
      },
      {
        "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*\\()",
        "name": "entity.name.function.kiwi"
      },
      {
        "begin": "\"",
        "end": "\"",
        "name": "string.quoted.double.kiwi"
      },
      {
        "match": "\\b\\d+(\\.\\d+)?\\b",
        "name": "constant.numeric.kiwi"
      },
      {
        "match": "//.*$",
        "name": "comment.line.double-slash.kiwi"
      }
    ]
  }